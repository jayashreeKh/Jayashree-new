	System.out.println("String1 ");
	
	if(isPalindrome(str))
		System.out.println("It is a Palindrome");
	else
		System.out.println("It is not a Palindrome");
	System.out.println("");
	
	//For String 2
	
	System.out.println("String2 ");
	if(isPalindrome(str))
		System.out.println("It is a Palindrome");
	System.out.println("");
	else
		System.out.println("It is not a Palindrome");

			
		}
	
