package ProgramsByMe;

public class PalindromString {

	int a=0,b=str.length()-1;
	while(a<b)//to compare the character of the given string
	{
		if(str.charAt(a)!=str.charAt(b))
		{
			System.out.println("String is not Palindrom");
			
		}
	a++;
	b--;
	}
	
