package ProgramsByMe;
class Apple
{
	String a="Apple";
	public void display()
	{
		System.out.println("From child class Apple");
		System.out.println("Apple is good for health"+a);
	}
}

class Orange extends Apple{
	
    String o ="Orange";

	public void displaycolor()
	{
		System.out.println("From child class Orange");
		
		System.out.println("Color of fruit is"+o);
		System.out.println("");
	}
}
class healthyfruits extends Apple
{
public void show()
{
	System.out.println("Give example of one healthy fruit");
	System.out.println(""+a);
	
}
}

public class Fruits {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Apple a=new Apple();
		Orange o=new Orange();
		healthyfruits hf=new healthyfruits();
		hf.display();
		o.displaycolor();
		a.display();
		hf.show();
	}

}
